<UserControl x:Class="WpfApp.Views.BoardNumberView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:WpfApp.Converters"
             mc:Ignorable="d"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"
             d:DataContext="{d:DesignInstance }">
    <Border
        Background="{Binding RouletteNumber.IsRed, Converter={converters:BoolToBackgroundColorConverter}}" 
        BorderBrush="{Binding RouletteNumber.IsRed, Converter={converters:BoolToBorderColorConverter}}" 
        CornerRadius="5"
        Margin="3"
        BorderThickness="1">
        <TextBlock
            Text="{Binding RouletteNumber.Number}" 
            FontSize="23"
            Foreground="{Binding RouletteNumber.IsRed, Converter={converters:BoolToForegroundColorConverter}}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
    </Border>
</UserControl>
